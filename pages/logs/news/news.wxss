page{
	padding-top:80rpx;
	display:flex;
	flex-direction:column;
  position: relative;

}
.navbar{
	width: 100%;
	position: fixed;
	top: 0;
  background: #eeeeee;
	/* 以上代码是固定菜单栏 */
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: flex-end;
	text-align: center;
	padding: 10rpx;
	border-bottom: 1rpx solid #e2e2e2;
  z-index: 999999;
}
.navbar .item{
	font-size: 30rpx;
	color: #555;
  
}
.navbar .item.active{
	color: #e00;
	font-size: 35rpx;
 
}
.navbar .item.active:after{
	content: '';
	display: block;
	position: relative;
	top: 4rpx;
	height: 4rpx;
	background-color: #e00;

}
